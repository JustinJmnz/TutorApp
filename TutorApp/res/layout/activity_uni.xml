<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/scholarhat"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tutorapp.UniActivity" >

    <TextView
        android:id="@+id/lblSchoolUni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="College/University:" />

    <ListView
        android:id="@+id/schoolList"
        android:layout_width="match_parent"
        android:layout_height="322dp" >

            </ListView>

    <Button
        android:id="@+id/btnUni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next" 
        android:onClick="ButtonOnClick"/>

    <TextView
        android:id="@+id/lblSelectedUni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
